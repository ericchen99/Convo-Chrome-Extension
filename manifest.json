{
    "manifest_version": 2,
  
    "name": "Conversation Starter",
    "description": "This extension will allow you to denote interest in a conversation",
    "version": "1.0",
  
    "browser_action": {
     "default_icon": "square_chat.png",
     "default_popup": "popup.html"
    },
    "permissions": [
     "activeTab"
    ],
    "content_scripts": [ 
        { 
            "js": [ "jquery.min.js"], 
            "matches": [ "http://*/*", "https://*/*"] 
        }
    ]
  }