{
    "manifest_version": 2,
  
    "name": "Conversation Starter",
    "description": "This extension will allow you to denote interest in a conversation",
    "version": "1.0",
  
    "browser_action": {
     "default_popup": "popup.html"
    },
    "icons": { "16": "convo_icon_16.png",
        "48": "convo_icon_48.png",
       "128": "convo_icon_128.png" },
    "permissions": [
     "activeTab"
    ],
    "content_scripts": [ 
        { 
            "js": [ "jquery.min.js"], 
            "matches": [ "http://*/*", "https://*/*"] 
        }
    ]
  }